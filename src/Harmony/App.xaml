<prism:PrismApplication x:Class="Harmony.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Harmony"
             xmlns:prism="http://prismlibrary.com/" >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Harmony.UI;component/Dictionaries/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Harmony.UI;component/Dictionaries/Vectors.xaml"/>

                <materialDesign:CustomColorTheme BaseTheme="Light" PrimaryColor="{StaticResource MaterialDesignPrimaryColor}" SecondaryColor="{StaticResource MaterialDesignAccentColor}"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
